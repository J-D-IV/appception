html {
  position: relative;
  min-height: 100%;
  // This sets the base px size for all rem units
  font-size: 12px;
}

body {
   // Margin bottom by footer height
  margin-bottom: 60px;
}

.page-wrapper {
  margin-top: 60px;
}

.footer {
  position: absolute;
  bottom: 0;
  width: 100%;
  padding: 0;
  /* Set the fixed height of the footer here */
  height: 60px;
  background-color: $white;

  p {
  	margin-top: 20px;
  }
}

